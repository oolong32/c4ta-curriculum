<%- include('includes/header') %>

<% if (schooldays.length) { %>
  <h2>Schultage, Übersicht</h2>
  <table>
    <tr>
      <th>Datum</th>
      <th>Titel</th>
      <th>Dozent:in</th>
      <th>Zimmer</th>
    </tr>
    <% for (schoolday of schooldays) { %>
      <tr>
        <td class="date"><%= schoolday.date.toLocaleDateString('de-CH', {year: "2-digit", month: "2-digit", day: "2-digit"}) %></td>
        <td class="title"><a href="<%= schoolday.url %>"><%- schoolday.title %></a></td>
        <td class="teacher"><a href="<%= schoolday.teacher.url %>"><%= schoolday.teacher.name %></a></td>
        <td class="room"><%= schoolday.room ? schoolday.room : '—' %></td>
      </tr>
    <% } %>
    </table>
<% } %>

<nav class="context-nav">
  <ul class="flex-list">
    <li><a href="/stundenplan/schultag/erfassen">neuen Schultag erfassen</a></li>
  </ul>
</nav>

<%- include('includes/footer') %>
<%- include('includes/html-end') %>